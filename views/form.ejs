<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <title>Gerador de Estórias - Formulário</title>
</head>


<body>
  <header>
    <div class="intro">
      <a href="./">
        <img src="/imgs/logo.png" alt="">
        <h1>Gerador <br/> de Estórias</h1>
      </a>
    </div>

    <div class="faixa">
      <div class="container">
        <div class="menu">
          <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/about">Sobre</a></li>
            <li><a href="/form" class="ativo">Formulário</a></li>
          </ul>
        </div>
      </div>
    </div>
  </header>

  <main>
    <div class="formGenerator container">

      <form action="" method="POST">

        <div class="slice">
          
          <div class="form-group">
            <h3 class="title">Informações dos Pais</h3>
            <label for="fatherName">Nome do pai</label>
            <input type="text" id="fatherName" name="fatherName">
          </div>
          <div class="form-group">
            <label for="motherName">Nome da mãe</label>
            <input type="text" id="motherName" name="motherName">
          </div>
          <div class="form-group">
            <label for="email">E-mail</label>
            <input type="email" id="email" name="email">
          </div>


          <div class="form-group">
            <label for="state">Estado</label>
            <select name="state" id="state">
              <option value="">Selecione o Estado...</option>
              <% estado.forEach(item => { %>
                <option value="<%= item.value %>"><%= item.option %></option>
              <% }) %>
            </select>
          </div>

          <div class="form-group">
            <label for="municipio">Município</label>
            <input type="text" id="municipio" name="municipio">
          </div>



        </div>

        <div class="slice"> 
          <div class="form-group">
            <h3 class="title">Informações da Criança</h3>
            <label for="childName">Nome</label>
            <input type="text" id="childName" name="childName">
          </div>



          <div class="form-group radio">
            <label for="childGender">Sexo</label>
            <div class="checkbox">
              <% sexo.forEach(item => { %>
                <input type="radio" id="childGender<%= item.value %>" name="childGender" value="<%= item.value %>">
                <label class="radio-label" for="childGender<%= item.value %>"><%= item.label %></label>
              <% }) %> 
            </div>
          </div>



          <div class="form-group">
            <label for="born">Data de Nascimento</label>
            <input type="text" id="born" name="born">
          </div>
          <div class="form-group">
            <label for="play">Brincadeira Favorita</label>
            <input type="text" id="play" name="play" required>
          </div>
          <div class="form-group">
            <label for="friendName">Melhores amigos</label>
            <input type="text" id="friendName" name="friendName"><span> & </span>
            <input type="text" id="friendName2" name="friendName2">
          </div>



          <div class="form-group">
            <label for="favoritePet">Animal Preferido</label>
            <select name="favoritePet" id="favoritePet">
              <option value="">Selecione...</option>
              <% animal.forEach(item => { %>
                <option value="<%= item.value %>"><%= item.option %></option>
              <% }) %>             
            </select>
          </div>



        </div>
         
        <div class="btn">
          <button type="submit">Enviar</button>
        </div>

      </form>


    </div>
  </main>

  <footer>
    <div class="container">
      <p class="rights">2021 - Thiago Gonçalves - Instituto Infnet</p>
      <div class="redes-sociais">
        <a href="#" class="twitter">
          <i class="fa fa-twitter" aria-hidden="true"></i>
          <p>Twitter</p>
        </a>
        <a href="#" class="facebook">
          <i class="fa fa-facebook-official" aria-hidden="true"></i>
          <p>Facebook</p>
        </a>
        <a href="#" class="instagram">
          <i class="fa fa-instagram" aria-hidden="true"></i>
          <p>Instagram</p>
        </a>
      </div>
    </div>
  </footer>



  <script>

    const htmlTag = document.documentElement
    htmlTag.classList.add('js')

  </script>
</body>
</html>